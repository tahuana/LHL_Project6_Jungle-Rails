<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

    </div>

    <% if current_user.present? %>

      <div class="row">

        <div class="col-sm-8">
            <%= form_for(:review, url:"/products/#{@product.id}/reviews") do |form| %>
              <dl class="dl-horizontal">
                <dt><%= form.label :rating %></dt>
                <dd><%= form.select :rating, [1,2,3,4,5], class: 'form-control' %></dd>
                <dt><br><%= form.label :description %></dt>
                <dd><br><%= form.text_area :description, class: 'form-control' %></dd>
                <dt></dt>
                <dd><br><%= form.submit "Send review" , class: 'btn btn-primary' %></dd>
              </dl>
            <% end %>
        </div>
      </div>

    <% end %>

    <div class="row">

        <% if @reviews.present? %>
          <% @reviews.each do |review| %>
            <%= render 'review', review: review  %>
          <% end %>
        <% else %>
          <div class="col-sm-8">
            <dl class="dl-horizontal">
              <dd>This product doesn't have any review.</dd>
            </dl>
          </div>
        <% end %>

    </div>

  </article>

</section>
